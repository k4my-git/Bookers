<body>
	<% if flash[:alert] %>
        <div class="flash-alert">
            <%= flash[:alert] %>
        </div>
    <% end %>
	<h1>Editing Book</h1>
	<%= form_for(@book, url: update_path(@book)) do |f| %>
		<div class="edit-form">
			<label>Title</label><br>
			<%= f.text_field :title %>
		</div>
		<div class="edit-form">
			<label>Body</label><br>
			<%= f.text_area :body %>
		</div>
		<div class="edit-form">
			<%= f.submit 'Update Book' %>
		</div>
		<%= link_to("Show", book_path(@book), {class: 'links'}) %>
		|
		<%= link_to("Back", books_path, {class: 'links'}) %>
	<% end %>
</body>