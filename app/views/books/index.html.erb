<body>
	<% if flash[:notice] %>
        <div class="flash-notice">
            <%= flash[:notice] %>
        </div>
    <% end %>
    <% if flash[:alert] %>
        <div class="flash-alert">
            <%= flash[:alert] %>
        </div>
    <% end %>
	<h1>Books</h1>
	<table >
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td>
					<%= link_to("Show", books_show_path(book), {class: 'links'}) %>
					<%= link_to("Edit", books_edit_path(book), {class: 'links'}) %>
					<%= link_to("Destroy", books_destroy_path(book), {method: :delete, "data-confirm" => "Are yuu sure?", class: 'links'}) %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<div class="index-new">
		<h2>New book</h2>
		<%= form_for(@book, url:books_create_path) do |f| %>
		<div class="index-form">
			<label>Title</label><br>
			<%= f.text_field :title %><br>
		</div>
		<div class="index-form">
			<label>Body</label><br>
			<%= f.text_area :body %><br>
		</div>
		<div class="index-form">
			<%= f.submit 'Create Book', class: "index-submit" %>
		</div>
		<% end %>
	</div>
</body>