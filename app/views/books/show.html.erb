<body class="show-body">
	<% if flash[:notice] %>
        <div class="flash-notice">
            <%= flash[:notice] %>
        </div>
    <% end %>
	<p class="show-text">
		<strong>Title:</strong>
		<%= @book.title %>
	</p>
	<p class="show-text">
		<strong>Body:</strong>
		<%= @book.body %>
	</p>

	<%= link_to("Edit", books_edit_path(@book), {class: 'links'}) %>
	|
	<%= link_to("Back", books_index_path, {class: 'links'}) %>

</body>